<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="This is my first suite">
    
    <test name="Running this test using groups">

    <!-- We need to specify what group of test we want to run ( similar to tags in cucumber)  -->
        <groups>
            <run>
                <include name="smokeTest"></include>
            </run>

        </groups>
        
<!--     We need to tell the xml file where to find the test cases   -->
        <packages>
            <package name="demo"></package>
        </packages>
        
        
    </test>
    
    
    
</suite>